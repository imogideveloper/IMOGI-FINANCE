{
  "doctype": "DocType",
  "name": "Internal Charge Request",
  "module": "Imogi Finance",
  "custom": 0,
  "istable": 0,
  "is_submittable": 1,
  "track_changes": 1,
  "editable_grid": 0,
  "autoname": "ICR-.YYYY.-.#####",
  "field_order": [
    "naming_series",
    "expense_request",
    "company",
    "posting_date",
    "fiscal_year",
    "source_cost_center",
    "total_amount",
    "allocation_mode",
    "internal_charge_lines",
    "status",
    "workflow_state",
    "current_approval_level",
    "approved_by",
    "approved_on",
    "created_by_user",
    "submit_on"
  ],
  "fields": [
    {
      "fieldname": "naming_series",
      "label": "Naming Series",
      "fieldtype": "Select",
      "options": "ICR-.YYYY.-.#####",
      "default": "ICR-.YYYY.-.#####",
      "reqd": 1
    },
    {
      "fieldname": "expense_request",
      "label": "Expense Request",
      "fieldtype": "Link",
      "options": "Expense Request",
      "reqd": 1,
      "in_list_view": 1,
      "in_standard_filter": 1,
      "search_index": 1,
      "read_only_depends_on": "eval:doc.docstatus==1"
    },
    {
      "fieldname": "company",
      "label": "Company",
      "fieldtype": "Link",
      "options": "Company",
      "reqd": 1,
      "fetch_from": "source_cost_center.company",
      "read_only": 1
    },
    {
      "fieldname": "posting_date",
      "label": "Posting Date",
      "fieldtype": "Date",
      "reqd": 1,
      "default": "Today",
      "read_only_depends_on": "eval:doc.docstatus==1"
    },
    {
      "fieldname": "fiscal_year",
      "label": "Fiscal Year",
      "fieldtype": "Link",
      "options": "Fiscal Year",
      "reqd": 1,
      "read_only": 1
    },
    {
      "fieldname": "source_cost_center",
      "label": "Source Cost Center",
      "fieldtype": "Link",
      "options": "Cost Center",
      "reqd": 1,
      "fetch_from": "expense_request.cost_center",
      "read_only": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "total_amount",
      "label": "Total Amount",
      "fieldtype": "Currency",
      "reqd": 1,
      "fetch_from": "expense_request.total_amount",
      "read_only": 1,
      "in_list_view": 1,
      "bold": 1
    },
    {
      "fieldname": "allocation_mode",
      "label": "Allocation Mode",
      "fieldtype": "Select",
      "options": "Direct\nAllocated via Internal Charge",
      "default": "Allocated via Internal Charge",
      "read_only": 1,
      "hidden": 1
    },
    {
      "fieldname": "internal_charge_lines",
      "label": "Internal Charge Lines",
      "fieldtype": "Table",
      "options": "Internal Charge Line",
      "reqd": 1,
      "cannot_add_rows": false,
      "cannot_delete_rows": false,
      "read_only_depends_on": "eval:doc.docstatus==1"
    },
    {
      "fieldname": "status",
      "label": "Status",
      "fieldtype": "Select",
      "read_only": 1,
      "options": "Draft\nPending Approval\nPartially Approved\nApproved\nRejected",
      "default": "Draft",
      "in_list_view": 1,
      "in_standard_filter": 1,
      "bold": 1
    },
    {
      "fieldname": "workflow_state",
      "label": "Workflow State",
      "fieldtype": "Link",
      "options": "Workflow State",
      "read_only": 1,
      "allow_on_submit": 1
    },
    {
      "fieldname": "current_approval_level",
      "label": "Current Approval Level",
      "fieldtype": "Int",
      "read_only": 1,
      "hidden": 1
    },
    {
      "fieldname": "approved_by",
      "label": "Approved By",
      "fieldtype": "Link",
      "options": "User",
      "read_only": 1,
      "hidden": 1
    },
    {
      "fieldname": "approved_on",
      "label": "Approved On",
      "fieldtype": "Datetime",
      "read_only": 1,
      "hidden": 1
    },
    {
      "fieldname": "created_by_user",
      "fieldtype": "Link",
      "label": "Created By",
      "options": "User",
      "read_only": 1,
      "no_copy": 1
    },
    {
      "fieldname": "submit_on",
      "fieldtype": "Datetime",
      "label": "Submit On",
      "read_only": 1,
      "no_copy": 1
    }
  ],
  "permissions": [
    {
      "role": "System Manager"
    },
    {
      "role": "Accounts Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "submit": 1,
      "cancel": 1,
      "amend": 1,
      "email": 1,
      "print": 1,
      "share": 1,
      "report": 1,
      "export": 1
    }
  ]
}
