{
  "doctype": "Workflow",
  "name": "Budget Reclass Request Workflow",
  "workflow_name": "Budget Reclass Request Workflow",
  "document_type": "Budget Reclass Request",
  "is_active": 1,
  "module": "Imogi Finance",
  "notes": "Multi-level approval workflow for budget reclass requests. Approval levels are determined by Budget Approval Setting per cost center. No amount validation - only hierarchical approval levels.",
  "override_status": 1,
  "workflow_state_field": "workflow_state",
  "states": [
    {
      "state": "Draft",
      "doc_status": "0",
      "allow_edit": "All"
    },
    {
      "state": "Pending Approval",
      "doc_status": "1",
      "allow_edit": "Budget Approver"
    },
    {
      "state": "Approved",
      "doc_status": "1",
      "allow_edit": "Budget Approver"
    },
    {
      "state": "Rejected",
      "doc_status": "1",
      "allow_edit": "Budget Approver"
    }
  ],
  "transitions": [
    {
      "state": "Draft",
      "action": "Submit",
      "next_state": "Pending Approval",
      "allowed": "All",
      "allow_self_approval": 0
    },
    {
      "state": "Pending Approval",
      "action": "Approve",
      "next_state": "Pending Approval",
      "allowed": "All"
    },
    {
      "state": "Pending Approval",
      "action": "Reject",
      "next_state": "Rejected",
      "allowed": "All"
    }
  ],
  "actions": [
    {
      "action": "Submit",
      "allowed": "All"
    },
    {
      "action": "Approve",
      "allowed": "All"
    },
    {
      "action": "Reject",
      "allowed": "All"
    }
  ]
}
