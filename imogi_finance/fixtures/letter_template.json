[
  {
    "doctype": "Letter Template",
    "name": "Payment Letter Default",
    "template_name": "Payment Letter Default",
    "letter_type": "Payment Letter",
    "is_active": 1,
    "is_default": 1,
    "body_html": "<div style=\"font-family: Arial, sans-serif; font-size: 12pt; color: #1f2937;\">\n  {% if header_image_url %}\n  <div style=\"text-align: center; margin-bottom: 24px;\">\n    <img src=\"{{ header_image_url }}\" alt=\"Header\" style=\"max-width: 100%; height: auto;\" />\n  </div>\n  {% endif %}\n\n  <div style=\"display: flex; justify-content: space-between; margin-bottom: 24px;\">\n    <div>\n      <div><strong>{{ company_name }}</strong></div>\n      {% if company_address %}\n      <div>{{ company_address }}</div>\n      {% endif %}\n    </div>\n    <div style=\"text-align: right;\">\n      <div>{{ letter_place }}</div>\n      <div>{{ letter_date }}</div>\n    </div>\n  </div>\n\n  <div style=\"margin-bottom: 16px;\">\n    <div>Nomor: {{ letter_number }}</div>\n    <div>Perihal: {{ subject }}</div>\n  </div>\n\n  <div style=\"margin-bottom: 16px;\">\n    <div>Kepada Yth.</div>\n    <div><strong>{{ customer_name }}</strong></div>\n    {% if customer_address %}\n    <div>{{ customer_address }}</div>\n    {% endif %}\n    {% if customer_city %}\n    <div>{{ customer_city }}</div>\n    {% endif %}\n  </div>\n\n  <div style=\"margin-bottom: 16px;\">\n    <p style=\"margin: 0 0 12px 0;\">Dengan hormat,</p>\n    <p style=\"margin: 0 0 12px 0;\">\n      Sehubungan dengan {{ transaction_type }} yang telah kami lakukan, berikut kami sampaikan\n      permintaan pembayaran dengan rincian sebagai berikut:\n    </p>\n    <table style=\"width: 100%; border-collapse: collapse; margin-bottom: 12px;\">\n      <tbody>\n        <tr>\n          <td style=\"padding: 6px 0; width: 32%;\">Nomor Invoice</td>\n          <td style=\"padding: 6px 0;\">: {{ invoice_number }}</td>\n        </tr>\n        <tr>\n          <td style=\"padding: 6px 0;\">Tanggal Invoice</td>\n          <td style=\"padding: 6px 0;\">: {{ invoice_date }}</td>\n        </tr>\n        <tr>\n          <td style=\"padding: 6px 0;\">Jatuh Tempo</td>\n          <td style=\"padding: 6px 0;\">: {{ due_date }}</td>\n        </tr>\n        <tr>\n          <td style=\"padding: 6px 0;\">Total Tagihan</td>\n          <td style=\"padding: 6px 0;\">: {{ amount }}</td>\n        </tr>\n        <tr>\n          <td style=\"padding: 6px 0;\">Terbilang</td>\n          <td style=\"padding: 6px 0;\">: {{ amount_in_words }}</td>\n        </tr>\n      </tbody>\n    </table>\n  </div>\n\n  <div style=\"margin-bottom: 16px;\">\n    <p style=\"margin: 0 0 12px 0;\">Mohon melakukan pembayaran melalui transfer ke rekening berikut:</p>\n    <table style=\"width: 100%; border-collapse: collapse;\">\n      <tbody>\n        <tr>\n          <td style=\"padding: 6px 0; width: 32%;\">Bank</td>\n          <td style=\"padding: 6px 0;\">: {{ bank_name }}</td>\n        </tr>\n        <tr>\n          <td style=\"padding: 6px 0;\">Cabang</td>\n          <td style=\"padding: 6px 0;\">: {{ bank_branch }}</td>\n        </tr>\n        <tr>\n          <td style=\"padding: 6px 0;\">Atas Nama</td>\n          <td style=\"padding: 6px 0;\">: {{ account_name }}</td>\n        </tr>\n        <tr>\n          <td style=\"padding: 6px 0;\">No. Rekening</td>\n          <td style=\"padding: 6px 0;\">: {{ account_number }}</td>\n        </tr>\n      </tbody>\n    </table>\n  </div>\n\n  <div style=\"margin-bottom: 24px;\">\n    <p style=\"margin: 0 0 12px 0;\">Setelah pembayaran dilakukan, mohon kirimkan bukti transfer ke:</p>\n    <div>Email: {{ proof_email }}</div>\n    <div>WhatsApp: {{ proof_whatsapp }}</div>\n  </div>\n\n  <div>\n    <p style=\"margin: 0 0 32px 0;\">Atas perhatian dan kerja samanya, kami ucapkan terima kasih.</p>\n    <div style=\"margin-top: 32px;\">\n      <div><strong>{{ signer_name }}</strong></div>\n      <div>{{ signer_title }}</div>\n    </div>\n  </div>\n\n  {% if footer_image_url %}\n  <div style=\"text-align: center; margin-top: 32px;\">\n    <img src=\"{{ footer_image_url }}\" alt=\"Footer\" style=\"max-width: 100%; height: auto;\" />\n  </div>\n  {% endif %}\n</div>"
  }
]
