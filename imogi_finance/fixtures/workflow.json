{
  "doctype": "Workflow",
  "name": "Expense Request Workflow",
  "workflow_name": "Expense Request Workflow",
  "document_type": "Expense Request",
  "is_active": 1,
  "module": "Imogi Finance",
  "override_status": 1,
  "workflow_state_field": "workflow_state",
  "docstatus": 0,
  "states": [
    {
      "doctype": "Workflow Document State",
      "state": "Draft",
      "doc_status": "0",
      "allow_edit": "All"
    },
    {
      "doctype": "Workflow Document State",
      "state": "Pending Review",
      "doc_status": "0",
      "allow_edit": "Owner"
    },
    {
      "doctype": "Workflow Document State",
      "state": "Approved",
      "doc_status": "1",
      "allow_edit": "Accounts Manager"
    },
    {
      "doctype": "Workflow Document State",
      "state": "Rejected",
      "doc_status": "2",
      "allow_edit": "Owner"
    },
    {
      "doctype": "Workflow Document State",
      "state": "PI Created",
      "doc_status": "1",
      "allow_edit": "Accounts Manager"
    },
    {
      "doctype": "Workflow Document State",
      "state": "Paid",
      "doc_status": "1",
      "allow_edit": "Accounts Manager"
    },
    {
      "doctype": "Workflow Document State",
      "state": "Cancelled",
      "doc_status": "2",
      "allow_edit": "Accounts Manager"
    }
  ],
  "transitions": [
    {
      "doctype": "Workflow Transition",
      "action": "Submit for Review",
      "state": "Draft",
      "next_state": "Pending Review",
      "allowed": "All",
      "allow_self_approval": 0
    },
    {
      "doctype": "Workflow Transition",
      "action": "Approve (Level 1)",
      "state": "Pending Review",
      "next_state": "Approved",
      "allowed": "Expense Approver",
      "allow_self_approval": 0,
      "condition": "doc.get('current_approval_level') == 1 and not (doc.get('level_2_user') or doc.get('level_3_user'))"
    },
    {
      "doctype": "Workflow Transition",
      "action": "Approve (Continue)",
      "state": "Pending Review",
      "next_state": "Pending Review",
      "allowed": "Expense Approver",
      "allow_self_approval": 0,
      "condition": "(doc.get('current_approval_level') == 1 and (doc.get('level_2_user') or doc.get('level_3_user'))) or (doc.get('current_approval_level') == 2 and doc.get('level_3_user'))"
    },
    {
      "doctype": "Workflow Transition",
      "action": "Approve (Final)",
      "state": "Pending Review",
      "next_state": "Approved",
      "allowed": "Expense Approver",
      "allow_self_approval": 0,
      "condition": "(doc.get('current_approval_level') == 2 and not doc.get('level_3_user')) or doc.get('current_approval_level') == 3"
    },
    {
      "doctype": "Workflow Transition",
      "action": "Reject",
      "state": "Pending Review",
      "next_state": "Rejected",
      "allowed": "Expense Approver",
      "allow_self_approval": 0
    },
    {
      "doctype": "Workflow Transition",
      "action": "Revise",
      "state": "Rejected",
      "next_state": "Draft",
      "allowed": "Owner",
      "allow_self_approval": 1
    },
    {
      "doctype": "Workflow Transition",
      "action": "Create Purchase Invoice",
      "state": "Approved",
      "next_state": "PI Created",
      "allowed": "Accounts User",
      "allow_self_approval": 1
    },
    {
      "doctype": "Workflow Transition",
      "action": "Mark as Paid",
      "state": "PI Created",
      "next_state": "Paid",
      "allowed": "Accounts Manager",
      "allow_self_approval": 0,
      "condition": "doc.purchase_invoice and frappe.db.get_value('Purchase Invoice', doc.purchase_invoice, 'docstatus') == 1"
    },
    {
      "doctype": "Workflow Transition",
      "action": "Cancel",
      "state": "Approved",
      "next_state": "Cancelled",
      "allowed": "Accounts Manager",
      "allow_self_approval": 0
    },
    {
      "doctype": "Workflow Transition",
      "action": "Cancel",
      "state": "PI Created",
      "next_state": "Cancelled",
      "allowed": "Accounts Manager",
      "allow_self_approval": 0
    }
  ]
}
